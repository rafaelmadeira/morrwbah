-@page_data_attributes = {:role => 'page', :theme => 'a', :url => request.url }.merge(@page_data_attributes || {})
%div{:data => @page_data_attributes}
  %div{:data => { :role => 'header', :position=>"fixed" }}
    %h1 My Own RSS Reader

  %div{:data => { :role => 'content' }}
    = form_tag sessions_path do
      = label_tag :login
      = text_field_tag :login, params[:login]
      = label_tag :password
      = password_field_tag :password
      %label.labelsmall{:for => 'remember_me'}
        = check_box_tag :remember_me
        Remember me
      = submit_tag "Log In"
